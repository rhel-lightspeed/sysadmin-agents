# Example Secrets for Sysadmin Agents
# 
# DO NOT commit real secrets to git!
# 
# Create secrets via CLI instead:
#   oc create secret generic gemini-api-key --from-literal=GOOGLE_API_KEY='your-key'
#   oc create secret generic ssh-private-key --from-file=id_ed25519=~/.ssh/id_ed25519
#   oc create secret generic ssh-credentials --from-literal=username='admin'
#
# Or copy this file, update values, and apply:
#   cp secrets.yaml.example secrets.yaml
#   # Edit secrets.yaml with your values (base64 encoded)
#   oc apply -f secrets.yaml

---
apiVersion: v1
kind: Secret
metadata:
  name: gemini-api-key
  labels:
    app: sysadmin-agents
type: Opaque
stringData:
  # Replace with your actual Google API Key
  GOOGLE_API_KEY: "your-google-api-key-here"

---
apiVersion: v1
kind: Secret
metadata:
  name: ssh-credentials
  labels:
    app: sysadmin-agents
type: Opaque
stringData:
  # SSH username for connecting to RHEL servers
  username: "admin"

---
apiVersion: v1
kind: Secret
metadata:
  name: ssh-private-key
  labels:
    app: sysadmin-agents
type: Opaque
stringData:
  # SSH private key for MCP server
  # Paste your key content here, or use:
  #   oc create secret generic ssh-private-key --from-file=id_ed25519=~/.ssh/id_ed25519
  id_ed25519: |
    -----BEGIN OPENSSH PRIVATE KEY-----
    # Your SSH private key here
    -----END OPENSSH PRIVATE KEY-----
